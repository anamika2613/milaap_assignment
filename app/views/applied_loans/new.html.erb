
<h3 class="center">Please fill form to apply for loan</h3>
<%=form_for @applied_loan, :html => {:class => "form-horizontal center"} do |f|%>

<div class="form-group">
<%=f.label :email, class: "col-md-4 control-label"%>
<%=f.email_field :email %>
</div>
<div class="form-group">
<%=f.label :pan_card, class: "col-md-4 control-label"%>
<%=f.text_field :pan_card%>
</div>
<div class="form-group">
<%=f.label :aadhar_number, class: "col-md-4 control-label"%>
<%=f.text_field :aadhar_number%>
</div>
<div class="form-group">
<%=f.label :bank_account_number, class: "col-md-4 control-label"%>
<%=f.text_field :bank_account_number%>
</div>
<div class="form-group">
<%=f.label :ifsc_code, class: "col-md-4 control-label"%>
<%=f.text_field :ifsc_code%>
</div>
<div class="form-group">
<%=f.label :monthly_recurring_inflow, class: "col-md-4 control-label"%>
<%=f.text_field :monthly_recurring_inflow%>
</div>
<div class="form-group">
<%=f.label :monthly_recurring_outflow, class: "col-md-4 control-label"%>
<%=f.text_field :monthly_recurring_outflow%>
</div>

<%= f.submit "Submit", class: "btn btn-default btn-primary" %> 
<%end%>